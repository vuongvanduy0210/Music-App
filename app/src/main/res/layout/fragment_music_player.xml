<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MusicPlayerFragment"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <ImageView
        android:id="@+id/img_back_ground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_bg_music_player"
        android:scaleType="centerCrop"
        android:alpha="0.5"/>

    <RelativeLayout
        android:id="@+id/layout_action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_action_bar"
        android:background="@color/blueLight"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:background="@color/blueLight"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_player"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title_action_bar"
            android:layout_centerInParent="true"
            tools:ignore="SpUsage" />

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_image_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/img_waiting_for_you"
        android:layout_marginTop="50dp"
        android:layout_below="@id/layout_action_bar"
        android:layout_centerHorizontal="true"/>


    <LinearLayout
        android:id="@+id/song_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_below="@id/circle_image_view"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tv_music_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_name_song_player_music"
            android:textColor="@color/black"
            android:lines="1"
            android:ellipsize="end"
            tools:ignore="SpUsage"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_singer_player_music"
            android:textColor="@color/black"
            android:lines="1"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal"
            tools:ignore="SpUsage"
            android:textStyle="italic"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_seekbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/song_info"
        android:layout_centerHorizontal="true">

        <SeekBar
            android:id="@+id/seek_bar_music"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/seek_bar_music"
            android:layout_marginTop="7dp">

            <TextView
                android:id="@+id/tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_final_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                tools:ignore="RelativeOverlap"
                android:textStyle="bold"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_below="@id/layout_seekbar"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/img_previous"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_previous"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"/>

        <ImageView
            android:id="@+id/img_play"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_pause"
            android:layout_toEndOf="@id/img_previous"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/img_next"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_next"
            android:layout_toEndOf="@id/img_play"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/bt_loop"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@id/layout_seekbar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="58dp"
        android:layout_toEndOf="@id/layout_button"
        android:src="@drawable/ic_is_looping" />

    <ImageView
        android:id="@+id/bt_shuffle"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@id/layout_seekbar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="58dp"
        android:layout_toStartOf="@id/layout_button"
        android:src="@drawable/ic_is_shuffling" />

</RelativeLayout>